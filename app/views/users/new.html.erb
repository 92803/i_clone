<body style="background: linear-gradient(-135deg, #E4A972, #9941D8);">
  <h1>Sign up</h1>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :name, "ユーザーネーム" %>
    <%= f.text_field :name %>

    <%= f.label :icon, "プロフィール写真" %>
    <%= f.file_field :icon,id: :user_icon %>
    <%= f.hidden_field :icon_cache %>

    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>

    <%= f.label :password, "パスワード※６文字以上" %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "※確認の為上記パスワード再入力" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "アカウント登録" %>
  <% end %>
</body>
